@model NumberGuessingGame.ViewModels.Game

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false, "Fel inträffade. Korrigera det som är fel och försök igen.")
    
    @Html.LabelFor(m => m.Guess)
    @Html.GuessTextBoxFor(m => m.Guess, Model.SecretNumber.LastGuessedNumber)

    <input type="submit" value="Skicka gissning" />
}
